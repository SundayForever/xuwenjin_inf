package cn.com.alo7.inf.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.github.jasminb.jsonapi.JSONAPIDocument;
import com.github.jasminb.jsonapi.ResourceConverter;

import cn.com.alo7.inf.entity.Video;
import cn.com.alo7.inf.repository.VideoRepository;

@RestController
public class VideoController {
	
	private ResourceConverter converter;
	
	@Autowired
	private VideoRepository videoRepository;
	/**
	 * A03-查询单个视频信息
	 * @param videoId
	 * @return
	 * @throws Exception 
	 */
	@GetMapping("videos/{videoId}")
	@ResponseBody
	public String getVideoByVideoId(@PathVariable String videoId) throws Exception {
		Video video =  videoRepository.getVideoByVideoId(videoId);
		/*Video video = new Video();
		video.setId("1");
		video.setStatus("up");
		video.setVideoUrl("c:/path");
		video.setVoiceTrackUrl("c:/path");
		video.setBackgroundTrackUrl("c:/path");
		video.setSubtitleUrl("c:/path");
		video.setIsDisplay("show");*/

		converter = new ResourceConverter(Video.class);
		//converter.enableSerializationOption(SerializationFeature.INCLUDE_RELATIONSHIP_ATTRIBUTES);
		byte [] rawData = converter.writeDocument(new JSONAPIDocument<Video>(video));
		JSONAPIDocument<Video> v = converter.readDocument(rawData, Video.class);
		String jsonStr = new String(converter.writeDocument(v));
		return jsonStr;
	}
}
